{
  "name": "@peculiar/ssh",
  "version": "1.0.0",
  "description": "A TypeScript library for working with SSH keys and certificates in both Node.js and browsers, built on top of WebCrypto. Provides parsing, serialization, conversion (SPKI/PKCS8 â†” SSH), and certificate signing/verification with an extensible algorithm registry.",
  "keywords": [
    "ssh",
    "crypto",
    "webcrypto",
    "keys",
    "certificates",
    "ed25519",
    "rsa",
    "ecdsa",
    "pkcs8",
    "spki",
    "typescript"
  ],
  "author": "Peculiar Ventures LLC",
  "contributors": [
    "Miroshin Stepan <microshine@mail.ru>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/ssh.git"
  },
  "bugs": {
    "url": "https://github.com/PeculiarVentures/ssh/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/ssh#readme",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run clean && rollup -c",
    "build:js": "rollup -c",
    "build:check": "tsc --noEmit --project tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf ./dist"
  },
  "devDependencies": {
    "@peculiar/eslint-config-base": "^0.2.7",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "rollup-plugin-dts": "^6.2.3",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "pvtsutils": "^1.3.6"
  }
}